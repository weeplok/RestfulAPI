syntax on
filetype plugin on
set nocompatible
set backspace=indent,eol,start
set smartindent
set autoindent

set smarttab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

set hlsearch
set incsearch

set showmatch

"set number
set history=50
set cursorline
set nocp
set ruler

syntax enable
set background=dark
"set background=light

set fileformats=unix,dos
" 设置新文件的编码为 UTF-8
set encoding=utf-8
" 自动判断编码时，依次尝试以下编码：
set fileencodings=ucs-bom,utf-8,cp936,gb18030,big5,euc-jp,euc-kr,latin1
set helplang=cn
" 下面这句只影响普通模式 (非图形界面) 下的 Vim
set termencoding=utf-8
